<Window x:Class="MarcinS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MarcinS"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
  

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <TextBox Grid.ColumnSpan="2"></TextBox>
        <Button Grid.Column="0" Grid.Row="1" FontSize="30">+</Button>
        <Button Grid.Column="1" Grid.Row="1" FontSize="30">-</Button>
        <Button Grid.Column="2" Grid.Row="1" FontSize="30">/</Button>
        <Button Grid.Column="0" Grid.Row="2" FontSize="30">*</Button>
        <Button Grid.Column="1" Grid.Row="2" FontSize="30">%</Button>
        <Button Grid.Column="2" Grid.Row="2" FontSize="30">=</Button>
        <Button Grid.Column="2" Grid.Row="0" FontSize="30">AC</Button>
    </Grid>

</Window>
