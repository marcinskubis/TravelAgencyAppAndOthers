<Window x:Class="MarcinS.Projekt.AddDestination"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MarcinS.Projekt"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="AddDestination" Height="450" Width="900">
    <Canvas>
        <Label Content="Nazwa" Canvas.Left="71" Canvas.Top="40" FontSize="20"/>
        <Label Content="Kraj" Canvas.Left="96" Canvas.Top="110" FontSize="20"/>
        <Label Content="Populacja" Canvas.Left="45" Canvas.Top="180" FontSize="20"/>
        <TextBox x:Name="name" Canvas.Left="165" Canvas.Top="38" Width="450" Height="40" FontSize="25"/>
        <TextBox x:Name="country" Canvas.Left="165" Canvas.Top="108" Width="450" Height="40" FontSize="25"/>
        <TextBox x:Name="population" Canvas.Left="165" Canvas.Top="178" Width="450" Height="40" FontSize="25" PreviewTextInput="NumberValidationTextBox"/>
        <Button x:Name="addDestination" Content="Dodaj" Canvas.Right="45" Canvas.Top="40" Height="88" Width="195" FontSize="30" Click="addDestination_Click"/>
    </Canvas>
</Window>
