<Window x:Class="MarcinS.Projekt.BrowseTrips"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MarcinS.Projekt"
        mc:Ignorable="d"
        Title="BrowseTrips" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="tripsTable" HorizontalAlignment="Left" Height="374" Margin="31,0,0,0" VerticalAlignment="Center" Width="520" ItemsSource="{Binding}"/>
        <Button x:Name="loadData" Content="Pokaż" HorizontalAlignment="Left" Margin="588,30,0,0" VerticalAlignment="Top" Height="63" Width="183" Click="loadData_Click"/>
        <Button x:Name="deleteData" Content="Usuń" HorizontalAlignment="Left" Margin="588,154,0,0" VerticalAlignment="Top" Height="63" Width="183" Click="deleteData_Click"/>

    </Grid>
</Window>
